{
	"extends": ["airbnb", "prettier", "prettier/react"],
	"plugins": ["react", "prettier"],
	"env": {
		"node": true,
		"es6": true,
		"browser": true
	},
	"rules": {
		"indent": ["error", "tab"],
        "no-tabs": 0,
        "react/jsx-filename-extension": [
			1,
			{
			  "extensions": [".js", "jsx"]
			}
		  ],
		  "prettier/prettier": "error",
	  "max-len": ["error", 80]
	},
	"settings": {
		"import/resolver": {
			"webpack": {
				"config": "./config/webpack-common-config.js"
			}
		}
	}
}